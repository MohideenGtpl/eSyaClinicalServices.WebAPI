        [HttpGet]
        public async Task<IActionResult> ActiveOrDeActiveDoctor(bool status, int doctorId)
        {
            var msg = await _DoctorMasterRepository.ActiveOrDeActiveDoctor(status,doctorId);
            return Ok(msg);
        }

